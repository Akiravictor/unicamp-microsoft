@using OngConnection.Domain.Enums
@model FamilyViewModel
@{
    ViewData["Title"] = "Remover Família";
}

<h3>Remover família da lista</h3>

@if (!String.IsNullOrEmpty(Model.Message))
{
    var statusMessageClass = Model.IsError ? "danger" : "success";
    <div class="alert alert-@statusMessageClass alert-dismissible" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        @Model.Message
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form id="family-form" method="post" asp-controller="SocialWorker" asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Nome" class="form-control" readonly />
                <label asp-for="Nome" class="form-label"></label>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input value="@Model.Atendida.GetDescription()" class="form-control" readonly />
                <label asp-for="Atendida" class="form-label"></label>
                <span asp-validation-for="Atendida" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Endereco" class="form-control" readonly />
                <label asp-for="Endereco" class="form-label"></label>
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="CEP" class="form-control" readonly />
                <label asp-for="CEP" class="form-label"></label>
                <span asp-validation-for="CEP" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Cidade" class="form-control" readonly />
                <label asp-for="Cidade" class="form-label"></label>
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Estado" class="form-control" readonly />
                <label asp-for="Estado" class="form-label"></label>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Telefone" class="form-control" readonly />
                <label asp-for="Telefone" class="form-label"></label>
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Email" class="form-control" readonly />
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Membros" class="form-control" readonly />
                <label asp-for="Membros" class="form-label"></label>
                <span asp-validation-for="Membros" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <textarea type="text" asp-for="Observacoes" class="form-control" row="4" readonly></textarea>
                <label asp-for="Observacoes" class="form-label"></label>
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <button id="register-family" type="submit" class="btn btn-danger">Remover</button>
            <a asp-action="List" asp-controller="SocialWorker" class="btn btn-secondary">Voltar</a>
        </form>
    </div>
</div>
